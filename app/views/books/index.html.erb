<h1>Listing books</h1>

<table class="table">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Publisher</th>
    <th>Amazon</th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
		<td><%= link_to(image_tag(book.image_url, class: 'thumbnail', width: 75), book) %></td>
    <td><%= link_to(book.title, book) %></td>
    <td><%= book.publisher %></td>
    <td><%= link_to 'Amazon', make_amazon_url(book.isbn10), class: 'btn' %></td>
    <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-primary' %></td>
    <td><%= link_to 'Destroy', book, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

